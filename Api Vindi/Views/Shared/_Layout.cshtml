	<!-- Janela de Login -->
	<div class="modal fade" tabindex="-1" id="loginModal" data-keyboard="false" data-backdrop="static">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header bg-primary-light">
					<h4 class="modal-title" style="color: white;">Login</h4>
					<button type="button" class="close btn-close-white" data-dismiss="modal">&times;</button>

				</div>
				<div class="modal-body bg-light">
					<form asp-action="Logar" asp-controller="Home">
						<div class="form-label-group">
							<input type="text" id="username" name="username" class="form-control" placeholder="Login" required autofocus>
							<label for="username">Digite seu usuário</label>
						</div>

						<div class="form-label-group">
							<input type="password" id="senha" name="senha" class="form-control" placeholder="Password" required>
							<label for="senha">Password</label>
						</div>

						<div class="custom-control custom-checkbox mb-3">
							<input type="checkbox" class="custom-control-input" id="customCheck1" name="manterlogado">
							<label class="custom-control-label" for="customCheck1">Manter Logado?</label>
						</div>



						<button type="submit" class="btn btn-primary mt-2">Login</button>
					</form>
				</div>
				<div class="modal-footer bg-opacity-100">
					<button type="button" class="btn btn-light" data-toggle="modal" data-target="#cadastroModal" data-dismiss="modal">Cadastre-se</button>
					<button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
				</div>

				

			</div>
		</div>
	</div>
	<!-- Fim da Janela Login -->
	<!-- Janela de Cadastro -->
	<div class="modal fade" tabindex="-1" id="cadastroModal" data-keyboard="false" data-backdrop="static">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header bg-primary-light">
					<h4 class="modal-title" style="color: white">Cadastre-se</h4>
					<button type="button" class="close btn-close-white" data-dismiss="modal">&times;</button>

				</div>
				<div class="modal-body bg-light">

					<form asp-action="CadastrarUsuario" asp-controller="Home">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Username" for="inputUsuario" class="control-label">Usuario</label>
							<input asp-for="Username" class="form-control" placeholder="Cadastro Usuário" type="text" id="inputUsuario" />
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Email" for="inputEmail">Email</label>
							<input asp-for="Email" class="form-control" placeholder=" Cadastro Email" type="email" id="inputSenha" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Password" for="inputSenha">Senha</label>
							<input asp-for="Password" class="form-control" placeholder="Cadastro Senha" type="password" id="inputSenha" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input type="submit" value="Cadastrar" class="btn btn-primary" />
						</div>
					</form>
				</div>
				<div class="modal-footer bg-opacity-100">
					<button type="submit" class="btn btn-primary"  data-toggle="modal" data-target="#loginModal" data-dismiss="modal">Login</button>					
					<button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
				</div>
			</div>
		</div>
