@model Api_Vindi.Models.Clientes.Cliente;
<h1>Plano Basico</h1>
<div class="container bg-light">
	<main>
		@if (TempData["Sucesso"] != null)
		{
			<h2 class="modal-title" style="color: lightgreen">Sua compra foi concluida com sucesso</h2>
			<a asp-action="PerfilUsuario" class="btn btn-primary" asp-controller="Home" style="color: white;">Voltar para perfil</a>
		}
		@if (TempData["Falha"] != null)
		{
			<h2 class="modal-title" style="color: darkred">Ocorreu um erro com sua compra, verifique seus dados</h2>
		}
		<div class="py-5 text-center">
			<h2>Formulário de cadastro</h2>
			<p class="lead">Entre suas informações para concluir o seu cadastro</p>
		</div>

		<div class="row g-5">
			<div class="col-md-5 col-lg-4 order-md-last">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
					<span class="text-primary">Seu carrinho</span>
					<span class="badge bg-primary rounded-pill">1</span>
				</h4>
				<ul class="list-group mb-3">
					<li class="list-group-item d-flex justify-content-between lh-sm">
						<div>
							<h6 class="my-0">Plano Basico</h6>
							<small class="text-muted">Assinatura basica no site web vindi</small>
						</div>
						<span class="text-muted">R$9,90</span>
					</li>

					<li class="list-group-item d-flex justify-content-between">
						<span>Total (R$)</span>
						<strong>R$ 9,90</strong>
					</li>
				</ul>

				<form class="card p-2">
					<div class="input-group">
						<input disabled type="text" class="form-control" placeholder="Código promocional">
						<button type="submit" class="btn btn-secondary">Resgatar</button>
					</div>
				</form>
			</div>
			<div class="col-md-7 col-lg-8">

				<form asp-action="ConcluirPlanoBasico" asp-controller="Home" class="needs-validation" novalidate>


					<hr class="my-4">



					<h1 class="mb-5">Pagamento</h1>
					<div class="col-md-7 col-lg-8  text-center">

						<div class="my-3">
							<div class="form-check">
								<input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked required>
								<label class="form-check-label" for="credit">Cartão de crédito</label>
							</div>
						</div>

						<div class="row gy-3">
							<div class="col-md-7">
								<label for="cc-name" class="form-label">Nome completo no cartão</label>
								<input type="text" asp-for="FullName" class="form-control" id="cc-name" placeholder="Jorge joao" required>
								<small class="text-muted">Nome completo mostrado no cartão</small>
								<div class="invalid-feedback">
									Nome no cartão é necessário
								</div>
							</div>

							<div class="col-md-3">
								<label for="cc-cvv" class="form-label">CVV</label>
								<input type="text" asp-for="MetodoPagamento.card_cvv" class="form-control" id="cc-cvv" placeholder="123" required>
								<div class="invalid-feedback">
									Código de segurança é necessário
								</div>
							</div>

							<div class="col-md-6">
								<label for="cc-number" class="form-label">Número cartão crédito</label>
								<input type="text" asp-for="MetodoPagamento.card_number" class="form-control" id="cc-number" placeholder="5555 4444 3333 2222" required>
								<div class="invalid-feedback">
									Número do cartão de crédito é necessário
								</div>
							</div>

							<div class="col-md-4">
								<label for="cc-expiration" class="form-label">Expiração</label>
								<input type="text" asp-for="MetodoPagamento.card_expiration" class="form-control" id="cc-expiration" placeholder="12/2018" required>
								<div class="invalid-feedback">
									Data de expiração é necessário
								</div>
							</div>


						</div>

						<hr class="my-4">


					</div>


					@Html.CheckBox("MinifyBool", false)
					<label class="form-check-label" for="flexSwitchCheckChecked">Renovar fatura automaticamente</label>

					<button class="w-100 btn btn-danger btn-lg mb-3 mt-3" type="submit"> Concluir Assinatura</button>

				</form>
				<a asp-action="PerfilUsuario" class="btn btn-primary" asp-controller="Home" style="color: white;">Voltar para perfil</a>
			</div>
		</div>
	</main>


</div>





